{
  "name": "延时等待",
  "code": "WAIT",
  "flowCode": "EVENTS",
  "primitive": "logic",
  "vendor": "innospots",
  "description": "等待节点",
  "icon": "/node/interval.svg",
  "nodeType": "io.innospots.workflow.node.app.logic.WaitNode",
  "inPorts": "1",
  "outPorts": "1",
  "components": [
    {
      "name": "displayName",
      "type": "Input",
      "valueType": "string",
      "copyable": false,
      "deletable": false,
      "settings": {
        "label": "节点名称",
        "placeholder": "请输入节点名称",
        "initialValue": "分支节点"
      }
    },
    {
      "name": "delay_mode",
      "type": "OptionPicker",
      "valueType": "string",
      "copyable": false,
      "deletable": false,
      "settings": {
        "label": "延迟执行方式",
		"viewType": "radio",
        "default": "PERIOD",
        "optionType": "default",
        "dataSource": "static",
        "initialValue": "PERIOD",
        "options": [
          {"value": "PERIOD", "label": "时间间隔"},
          {"value": "FIXED", "label": "指定时间"}
        ]
      }
    },
    {
      "name": "interval_time",
      "type": "NumberInput",
      "valueType": "number",
      "copyable": false,
      "deletable": false,
      "settings": {
        "label": "延迟时长",
        "width": 100,
        "props": {
          "step": 1,
          "min": 1
        }
      },
      "conditions": [
        {
          "result": "visible",
          "relation": "OR",
          "children": [
            {
              "name": "delay_mode",
              "opt": "EQUAL",
              "value": "PERIOD"
            }
          ]
        }
      ]
    },
    {
      "name": "time_period",
      "type": "OptionPicker",
      "valueType": "string",
      "settings": {
        "label": "时间单位",
        "default": "MINUTE",
		"viewType": "picker",
        "optionsType": "customOptions",
        "dataSource": "static",
        "initialValue": "MINUTE",
        "options": [
          {"value": "MINUTE", "label": "分"},
          {"value": "HOUR", "label": "时"},
          {"value": "DAY", "label": "天"},
          {"value": "WEEK", "label": "周"},
          {"value": "MONTH", "label": "月"}
        ]
      },
      "conditions": [
        {
          "result": "visible",
          "relation": "OR",
          "children": [
            {
              "name": "delay_mode",
              "opt": "EQUAL",
              "value": "PERIOD"
            }
          ]
        }
      ]
    },
    {
      "name": "running_date_time",
      "type": "DateTimePicker",
      "valueType": "string",
      "copyable": false,
      "deletable": false,
      "settings": {
        "label": "日期时间",
        "props": {
          "showTime": true,
          "format": "YYYY-MM-DD HH:mm:ss"
        }
      },
      "conditions": [
        {
          "result": "visible",
          "relation": "OR",
          "children": [
            {
              "name": "delay_mode",
              "opt": "EQUAL",
              "value": "FIXED"
            }
          ]
        }
      ]
    }
  ]
}