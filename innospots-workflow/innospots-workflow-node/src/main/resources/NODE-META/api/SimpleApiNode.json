{
  "name": "Simple API",
  "code": "simple_api",
  "flowCode": "EVENTS",
  "primitive": "api",
  "vendor": "innospots",
  "credentialTypeCode": "Http",
  "description": "API接口",
  "icon": "http-api",
  "nodeType": "io.innospots.workflow.node.app.api.ApiDataNode",
  "inPorts": "1",
  "outPorts": "1",
  "components": [
    {
      "name": "displayName",
      "type": "Input",
      "valueType": "string",
      "copyable": false,
      "deletable": false,
      "settings": {
        "label": "节点名称",
        "placeholder": "请输入节点名称",
        "initialValue": "API节点"
      }
    },
    {
      "name": "url_address",
      "type": "HttpURLInput",
      "valueType": "array",
      "copyable": true,
      "deletable": true,
      "settings": {
        "label": "请求地址",
        "placeholder": "请输入请求地址"
      }
    },
    {
      "name": "request_params",
      "type": "HttpRequest",
      "valueType": "array",
      "copyable": false,
      "deletable": false,
      "settings": {
        "label": "HTTP请求参数",
        "isSelect": true,
        "dependencies": "url_address"
      }
    },
    {
      "name": "output_payload",
      "type": "Switch",
      "valueType": "boolean",
      "copyable": false,
      "deletable": false,
      "settings": {
        "hidden": true,
        "viewType": "switch",
        "initialValue": true,
        "label": "是否输出返回结果"
      }
    },
    {
      "name": "extract_path",
      "type": "Input",
      "valueType": "string",
      "copyable": false,
      "deletable": false,
      "settings": {
        "label": "数据提取",
        "initialValue": "$"
      }
    },
    {
      "name": "output_field_type",
      "type": "OptionPicker",
      "valueType": "string",
      "copyable": false,
      "deletable": false,
      "settings": {
        "hidden": true,
        "dataSource": "static",
        "initialValue": "MAP",
        "label": "返回数据类型",
		"viewType": "radio",
        "options": [
          {
            "value": "LIST",
            "label": "列表"
          },
          {
            "value": "MAP",
            "label": "单条(JSON对象)"
          }
        ]
      },
      "conditions": [
        {
          "result": "visible",
          "relation": "OR",
          "children": [
            {
              "name": "output_payload",
              "opt": "EQUAL",
              "value": true
            }
          ]
        }
      ]
    },
    {
      "name": "output_mode_map",
      "type": "OptionPicker",
      "valueType": "string",
      "copyable": false,
      "deletable": false,
      "settings": {
        "label": "输出结果",
        "hidden": true,
        "dataSource": "static",
        "initialValue": "OVERWRITE",
		"viewType": "picker",
        "options": [
          {
            "value": "FIELD",
            "label": "存入变量"
          },
          {
            "value": "PAYLOAD",
            "label": "与输入合并"
          },
          {
            "value": "OVERWRITE",
            "label": "只输出返回结果"
          }
        ],
        "optionsType": "customOptions"
      },
      "conditions": [
        {
          "result": "visible",
          "relation": "AND",
          "children": [
            {
              "name": "output_field_type",
              "opt": "EQUAL",
              "value": "MAP"
            },
            {
              "name": "output_payload",
              "opt": "EQUAL",
              "value": true
            }
          ]
        }
      ]
    },
    {
      "name": "output_mode_list",
      "type": "OptionPicker",
      "valueType": "string",
      "copyable": false,
      "deletable": false,
      "settings": {
        "hidden": true,
        "label": "输出结果",
        "default": "OVERWRITE",
        "dataSource": "static",
        "initialValue": "OVERWRITE",
		"viewType": "picker",
        "options": [
          {
            "value": "FIELD",
            "label": "存入变量"
          },
          {
            "value": "OVERWRITE",
            "label": "只输出返回结果"
          }
        ],
        "optionsType": "customOptions"
      },
      "conditions": [
        {
          "result": "visible",
          "relation": "OR",
          "children": [
            {
              "name": "output_field_type",
              "opt": "EQUAL",
              "value": "LIST"
            },
            {
              "name": "output_payload",
              "opt": "EQUAL",
              "value": true
            }
          ]
        }
      ]
    },
    {
      "name": "variable_name",
      "type": "Input",
      "valueType": "string",
      "copyable": false,
      "deletable": false,
      "settings": {
        "hidden": true,
        "label": "存储变量名称",
        "default": "var_item"
      },
      "conditions": [
        {
          "result": "visible",
          "relation": "AND",
          "children": [
            {
              "name": "output_mode_map",
              "opt": "EQUAL",
              "value": "FIELD"
            },
            {
              "name": "output_payload",
              "opt": "EQUAL",
              "value": true
            }
          ]
        },
        {
          "result": "visible",
          "relation": "OR",
          "children": [
            {
              "name": "output_mode_list",
              "opt": "EQUAL",
              "value": "FIELD"
            },
            {
              "name": "output_payload",
              "opt": "EQUAL",
              "value": true
            }
          ]
        }
      ]
    },
    {
      "name": "switch_cache",
      "type": "Switch",
      "valueType": "boolean",
      "copyable": false,
      "deletable": false,
      "settings": {
        "hidden": true,
        "viewType": "switch",
        "initialValue": false,
        "label": "开启缓存"
      }
    },
    {
      "name": "cache_second",
      "type": "NumberInput",
      "valueType": "number",
      "copyable": false,
      "deletable": false,
      "settings": {
        "hidden": true,
        "width": 100,
        "initialValue": "60",
        "label": "缓存时间(秒)"
      },
      "conditions": [
        {
          "result": "visible",
          "relation": "OR",
          "children": [
            {
              "name": "switch_cache",
              "opt": "EQUAL",
              "value": true
            }
          ]
        }
      ]
    }
  ]
}