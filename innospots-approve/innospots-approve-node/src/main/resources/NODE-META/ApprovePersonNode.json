{
  "name": "审批人员",
  "code": "approve_person",
  "flowCode": "APPROVAL",
  "primitive": "approve",
  "vendor": "innospots",
  "description": "审批人员节点",
  "icon": "/node/approve_person.svg",
  "nodeType": "io.innospots.approve.node.ApprovePersonNode",
  "outPorts": "1",
  "inPorts": "1",
  "components": [
    {
      "name": "displayName",
      "type": "Input",
      "valueType": "string",
      "copyable": false,
      "deletable": false,
      "settings": {
        "label": "节点名称",
        "placeholder": "请输入节点名称",
        "initialValue": "审批人员节点"
      }
    },
    {
      "name": "actorType",
      "type": "OptionPicker",
      "valueType": "string",
      "copyable": false,
      "deletable": false,
      "settings": {
        "label": "审批人员类型",
        "viewType": "picker",
        "dataSource": "static",
        "initialValue": "role",
        "options": [
          {"label": "角色", "value": "ROLE"},
          {"label": "主管", "value": "GROUP"},
          {"label": "指定成员", "value": "USER"}
        ]
      }
    },
    {
      "name": "roleId",
      "type": "OptionPicker",
      "valueType": "string",
      "copyable": false,
      "deletable": false,
      "settings": {
        "label": "审批角色",
        "viewType": "picker",
        "dataSource": "interface",
        "dynamicOptions": {
          "url": "/innospots/api/role/list-select",
          "method": "GET",
          "fieldNames": {
            "value": "value",
            "label": "label"
          }
        }
      },
      "conditions": [
        {
          "result": "visible",
          "relation": "OR",
          "children": [
            {
              "name": "actorType",
              "opt": "EQUAL",
              "value": "ROLE"
            }
          ]
        }
      ]
    },
    {
      "name": "userId",
      "type": "OptionPicker",
      "valueType": "string",
      "copyable": false,
      "deletable": false,
      "settings": {
        "label": "审批人员",
        "viewType": "picker",
        "dataSource": "static",
        "options": []
      },
      "conditions": [
        {
          "result": "visible",
          "relation": "OR",
          "children": [
            {
              "name": "actorType",
              "opt": "EQUAL",
              "value": "USER"
            }
          ]
        }
      ]
    },
    {
      "name": "leaderLevel",
      "type": "OptionPicker",
      "valueType": "string",
      "copyable": false,
      "deletable": false,
      "settings": {
        "label": "主管级别",
        "viewType": "picker",
        "dataSource": "static",
        "options": [
          {"label": "上级主管", "value": "1"},
          {"label": "二级主管", "value": "2"},
          {"label": "三级主管", "value": "3"}
        ]
      },
      "conditions": [
        {
          "result": "visible",
          "relation": "OR",
          "children": [
            {
              "name": "actorType",
              "opt": "EQUAL",
              "value": "GROUP"
            }
          ]
        }
      ]
    }
  ]
}